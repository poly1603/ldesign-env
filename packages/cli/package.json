{
  "name": "@ldesign/env-cli",
  "version": "1.0.0",
  "description": "LDesign 环境配置管理 - CLI 工具",
  "type": "module",
  "bin": {
    "ldesign-env": "./dist/index.js",
    "lenv": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ldesign/env-core": "workspace:*",
    "@ldesign/env-server": "workspace:*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "env",
    "cli",
    "environment",
    "config"
  ],
  "author": "LDesign Team",
  "license": "MIT"
}

